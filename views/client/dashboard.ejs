<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <main>
        <div class="container my-5">
            <h1 class="mb-4">Client Dashboard</h1>
            
            <!-- Toast container -->
            <div id="toastContainer" class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050;"></div>
            
            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-4 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Total Bookings</h5>
                            <h2 class="text-primary"><%= stats.totalBookings %></h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Pending</h5>
                            <h2 class="text-warning"><%= stats.pendingBookings %></h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Completed</h5>
                            <h2 class="text-success"><%= stats.completedBookings %></h2>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Bookings -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Recent Bookings</h5>
                </div>
                <div class="card-body">
                    <% if (recentBookings.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Service</th>
                                        <th>Worker</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% recentBookings.forEach(booking => { %>
                                        <tr>
                                            <td><%= booking.serviceCategory %></td>
                                            <td><%= booking.workerId.firstName %> <%= booking.workerId.lastName %></td>
                                            <td><%= new Date(booking.requestedDate).toLocaleDateString() %></td>
                                            <td><span class="badge bg-<%= booking.status === 'completed' ? 'success' : booking.status === 'pending' ? 'warning' : 'secondary' %>"><%= booking.status %></span></td>
                                            <td><a href="/bookings/<%= booking._id %>" class="btn btn-sm btn-primary">View</a></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <p class="text-muted">No bookings yet. <a href="/client/search">Search for workers</a> to get started.</p>
                    <% } %>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <a href="/client/search" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-search"></i> Search Workers
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="/client/bookings" class="btn btn-outline-primary btn-lg w-100">
                        <i class="bi bi-calendar-check"></i> View All Bookings
                    </a>
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>

