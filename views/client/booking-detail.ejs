<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <main>
        <div class="container my-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Booking Details</h1>
                <a href="/client/bookings" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Bookings
                </a>
            </div>
            
            <!-- Toast container -->
            <div id="toastContainer" class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050;"></div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Service Request</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-3"><strong>Service:</strong></div>
                                <div class="col-sm-9"><%= booking.serviceCategory %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3"><strong>Description:</strong></div>
                                <div class="col-sm-9"><%= booking.serviceDescription %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3"><strong>Requested Date:</strong></div>
                                <div class="col-sm-9"><%= new Date(booking.requestedDate).toLocaleDateString() %> at <%= booking.requestedTime %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3"><strong>Budget:</strong></div>
                                <div class="col-sm-9">$<%= booking.budget %></div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3"><strong>Status:</strong></div>
                                <div class="col-sm-9">
                                    <span class="badge bg-<%= 
                                        booking.status === 'completed' ? 'success' : 
                                        booking.status === 'pending' ? 'warning' : 
                                        booking.status === 'accepted' ? 'info' : 
                                        booking.status === 'in-progress' ? 'primary' :
                                        'secondary' 
                                    %>"><%= booking.status %></span>
                                </div>
                            </div>
                            <% if (booking.clientNotes) { %>
                            <div class="row mb-3">
                                <div class="col-sm-3"><strong>Your Notes:</strong></div>
                                <div class="col-sm-9"><%= booking.clientNotes %></div>
                            </div>
                            <% } %>
                            <% if (booking.workerNotes) { %>
                            <div class="row mb-3">
                                <div class="col-sm-3"><strong>Worker Notes:</strong></div>
                                <div class="col-sm-9"><%= booking.workerNotes %></div>
                            </div>
                            <% } %>
                        </div>
                    </div>

                    <% if (booking.location && booking.location.address) { %>
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Service Location</h5>
                        </div>
                        <div class="card-body">
                            <p><i class="bi bi-geo-alt"></i> <%= booking.location.address %></p>
                        </div>
                    </div>
                    <% } %>
                </div>

                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Worker Information</h5>
                        </div>
                        <div class="card-body text-center">
                            <img src="<%= booking.workerId.profileImage || '/images/default-avatar.png' %>" 
                                 alt="Worker" class="rounded-circle mb-3" width="100" height="100">
                            <h5><%= booking.workerId.firstName %> <%= booking.workerId.lastName %></h5>
                            <p class="text-muted">
                                <i class="bi bi-envelope"></i> <%= booking.workerId.email %><br>
                                <% if (booking.workerId.phone) { %>
                                    <i class="bi bi-telephone"></i> <%= booking.workerId.phone %>
                                <% } %>
                            </p>
                            <% if (booking.workerId.rates && booking.workerId.rates.hourly) { %>
                            <p class="mb-0"><strong>Rate:</strong> $<%= booking.workerId.rates.hourly %>/hour</p>
                            <% } %>
                        </div>
                    </div>

                    <% if (booking.status === 'pending' || booking.status === 'accepted') { %>
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <button class="btn btn-danger" onclick="handleCancelWithReason('<%= booking._id %>')">
                                    <i class="bi bi-x-circle"></i> Cancel Booking
                                </button>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        // Handle cancellation with reason prompt
        function handleCancelWithReason(bookingId) {
            const reason = prompt('Please provide a reason for cancelling this booking:');
            if (reason !== null) { // User didn't cancel the prompt
                ConsultancyPortal.handleBookingAction(bookingId, 'cancel', reason);
            }
        }
    </script>

</body>
</html>