<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <main>
        <div class="container my-5">
            <h1 class="mb-4">Service Requests</h1>
            
            <!-- Toast container -->
            <div id="toastContainer" class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050;"></div>

            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="GET" action="/worker/requests">
                        <div class="row">
                            <div class="col-md-4">
                                <select class="form-select" name="status">
                                    <option value="">All Status</option>
                                    <option value="pending" <%= statusFilter === 'pending' ? 'selected' : '' %>>Pending</option>
                                    <option value="accepted" <%= statusFilter === 'accepted' ? 'selected' : '' %>>Accepted</option>
                                    <option value="in-progress" <%= statusFilter === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                                    <option value="completed" <%= statusFilter === 'completed' ? 'selected' : '' %>>Completed</option>
                                    <option value="rejected" <%= statusFilter === 'rejected' ? 'selected' : '' %>>Rejected</option>
                                    <option value="cancelled" <%= statusFilter === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary">Filter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Requests List -->
            <div class="card">
                <div class="card-body">
                    <% if (bookings.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Client</th>
                                        <th>Service</th>
                                        <th>Date & Time</th>
                                        <th>Budget</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% bookings.forEach(booking => { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= booking.clientId.profileImage || '/images/default-avatar.png' %>" 
                                                         alt="Client" class="rounded-circle me-2" width="40" height="40">
                                                    <div>
                                                        <strong><%= booking.clientId.firstName %> <%= booking.clientId.lastName %></strong>
                                                        <br>
                                                        <small class="text-muted">
                                                            <i class="bi bi-envelope"></i> <%= booking.clientId.email %>
                                                            <% if (booking.clientId.phone) { %>
                                                                <br><i class="bi bi-telephone"></i> <%= booking.clientId.phone %>
                                                            <% } %>
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <strong><%= booking.serviceCategory %></strong>
                                                <br>
                                                <small class="text-muted"><%= booking.serviceDescription.substring(0, 50) %>...</small>
                                            </td>
                                            <td>
                                                <%= new Date(booking.requestedDate).toLocaleDateString() %>
                                                <br>
                                                <small class="text-muted"><%= booking.requestedTime %></small>
                                            </td>
                                            <td>$<%= booking.budget %></td>
                                            <td>
                                                <span class="badge bg-<%= 
                                                    booking.status === 'completed' ? 'success' : 
                                                    booking.status === 'pending' ? 'warning' : 
                                                    booking.status === 'accepted' ? 'info' : 
                                                    booking.status === 'in-progress' ? 'primary' :
                                                    'secondary' 
                                                %>"><%= booking.status %></span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm flex-wrap">
                                                    <% if (booking.status === 'pending') { %>
                                                        <button type="button" class="btn btn-success btn-sm mb-1" onclick="ConsultancyPortal.handleBookingAction('<%= booking._id %>', 'accept')" title="Accept">
                                                            <i class="bi bi-check"></i> Accept
                                                        </button>
                                                        <button type="button" class="btn btn-danger btn-sm mb-1" onclick="handleRejectWithReason('<%= booking._id %>')" title="Reject">
                                                            <i class="bi bi-x"></i> Reject
                                                        </button>
                                                    <% } else if (booking.status === 'accepted') { %>
                                                        <button class="btn btn-primary btn-sm mb-1" onclick="ConsultancyPortal.handleBookingAction('<%= booking._id %>', 'status', 'in-progress')" title="Start Work">
                                                            <i class="bi bi-play"></i> Start
                                                        </button>
                                                        <button class="btn btn-danger btn-sm mb-1" onclick="handleCancelWithReason('<%= booking._id %>')" title="Cancel">
                                                            <i class="bi bi-x"></i> Cancel
                                                        </button>
                                                    <% } else if (booking.status === 'in-progress') { %>
                                                        <button class="btn btn-success btn-sm mb-1" onclick="ConsultancyPortal.handleBookingAction('<%= booking._id %>', 'status', 'completed')" title="Mark Complete">
                                                            <i class="bi bi-check-circle"></i> Complete
                                                        </button>
                                                    <% } %>
                                                    <a href="/bookings/<%= booking._id %>" class="btn btn-primary btn-sm mb-1" title="View Details">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <% if (totalPages > 1) { %>
                            <nav>
                                <ul class="pagination justify-content-center">
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %>&status=<%= statusFilter || '' %>"><%= i %></a>
                                        </li>
                                    <% } %>
                                </ul>
                            </nav>
                        <% } %>
                    <% } else { %>
                        <p class="text-muted text-center">No requests found.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        function handleRejectWithReason(bookingId) {
            const reason = prompt('Please provide a reason for rejecting this booking:');
            if (reason !== null) {
                ConsultancyPortal.handleBookingAction(bookingId, 'reject', reason);
            }
        }
        
        function handleCancelWithReason(bookingId) {
            const reason = prompt('Please provide a reason for cancelling this booking:');
            if (reason !== null) {
                ConsultancyPortal.handleBookingAction(bookingId, 'cancel', reason);
            }
        }
    </script>

</body>
</html>

