<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <main>
        <div class="container my-5">
            <h1 class="mb-4">Worker Dashboard</h1>
            
            <!-- Toast container -->
            <div id="toastContainer" class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050;"></div>
                        
                        <!-- Skills Prompt -->
                        <% if (!worker || !worker.skills || worker.skills.length === 0) { %>
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <strong>Complete Your Profile!</strong> Please add your skills and service areas to start receiving job requests.
                                <a href="/worker/skills" class="btn btn-outline-warning btn-sm ms-2">Add Skills Now</a>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        <% } else { %>
                            <div class="mb-4 text-center">
                                <a href="/worker/skills" class="btn btn-primary">
                                    <i class="bi bi-tools"></i> Update Your Skills
                                </a>
                            </div>
                        <% } %>
            
            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Total Bookings</h5>
                            <h2 class="text-primary"><%= stats.totalBookings %></h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Pending Requests</h5>
                            <h2 class="text-warning"><%= stats.pendingCount %></h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Completed</h5>
                            <h2 class="text-success"><%= stats.completedCount %></h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">This Month Earnings</h5>
                            <h2 class="text-info">$<%= (earningsSummary.totalPayout || 0).toFixed(2) %></h2>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Requests -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Pending Service Requests</h5>
                    <a href="/worker/requests" class="btn btn-sm btn-primary">View All</a>
                </div>
                <div class="card-body">
                    <% if (pendingRequests.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Client</th>
                                        <th>Service</th>
                                        <th>Date</th>
                                        <th>Budget</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% pendingRequests.forEach(booking => { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= booking.clientId.profileImage || '/images/default-avatar.png' %>" 
                                                         alt="Client" class="rounded-circle me-2" width="40" height="40">
                                                    <div>
                                                        <strong><%= booking.clientId.firstName %> <%= booking.clientId.lastName %></strong>
                                                        <br>
                                                        <small class="text-muted"><%= booking.clientId.phone || 'No phone' %></small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><%= booking.serviceCategory %></td>
                                            <td><%= new Date(booking.requestedDate).toLocaleDateString() %></td>
                                            <td>$<%= booking.budget %></td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-success" onclick="ConsultancyPortal.handleBookingAction('<%= booking._id %>', 'accept')">
                                                        <i class="bi bi-check"></i> Accept
                                                    </button>
                                                    <button class="btn btn-danger" onclick="ConsultancyPortal.handleBookingAction('<%= booking._id %>', 'reject')">
                                                        <i class="bi bi-x"></i> Reject
                                                    </button>
                                                    <a href="/bookings/<%= booking._id %>" class="btn btn-primary">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <p class="text-muted text-center">No pending requests at the moment.</p>
                    <% } %>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row">
                <div class="col-md-4 mb-3">
                    <a href="/worker/requests" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-inbox"></i> Manage Requests
                    </a>
                </div>
                <div class="col-md-4 mb-3">
                    <a href="/worker/earnings" class="btn btn-outline-primary btn-lg w-100">
                        <i class="bi bi-cash-coin"></i> View Earnings
                    </a>
                </div>
                <div class="col-md-4 mb-3">
                    <a href="/worker/skills" class="btn btn-outline-primary btn-lg w-100">
                        <i class="bi bi-tools"></i> Update Your Skills
                    </a>
                </div>
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>

</body>
</html>

